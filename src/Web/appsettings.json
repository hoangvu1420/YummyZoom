{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.SpaProxy": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AZURE_KEY_VAULT_ENDPOINT": "",
  "AllowedHosts": "*",
  "Features": {
    "TeamCart": true,
    "OrderFlowSimulation": true,
    "TeamCartFlowSimulation": true
  },
  "TeamCartStore": {
    "KeyPrefix": "yz:dev",
    "TtlMinutes": 60,
    "UpdatesChannel": "teamcart:updates",
    "MaxItemsPerCart": 200
  },
  "Search": {
    "ResultExplanation": {
      "NearYouDistanceKm": 2.0,
      "MinReviewsForRatingBadge": 10,
      "HighRatingCutoff": 4.5
    }
  },
  "MenuReadModelMaintenance": {
    "Enabled": true,
    "InitialDelay": "00:00:10",
    "BackfillBatchSize": 200,
    "ReconBatchSize": 200,
    "ReconInterval": "00:05:00",
    "MaxParallelism": 6,
    "DeleteOrphans": true,
    "LogEveryN": 50
  },
  "SearchIndexMaintenance": {
    "Enabled": true,
    "InitialDelay": "00:00:10",
    "BackfillBatchSize": 100,
    "ReconBatchSize": 100,
    "ReconInterval": "00:05:00",
    "MaxParallelism": 4,
    "DeleteOrphans": true,
    "LogEveryN": 50
  },
  "ReviewSummaryMaintenance": {
    "Enabled": true,
    "InitialDelay": "00:00:10",
    "ReconInterval": "00:10:00"
  },
  "AdminMetricsMaintenance": {
    "Enabled": true,
    "InitialDelay": "00:00:10",
    "Interval": "00:05:00",
    "DailySeriesWindowDays": 30
  },
  "Seeding": {
    "Profile": "Development",
    "EnableIdempotentSeeding": true,
    "ClearExistingData": false,
    "SeedTestData": true,
    "EnabledSeeders": {
      "Role": true,
      "User": true,
      "Tag": true,
      "RestaurantBundle": true,
      "CouponBundle": true,
      "Order": true,
      "Review": true
    },
    "SeederSettings": {
      "RestaurantBundle": {
        "ReportOnly": false,
        "UpdateDescriptions": true,
        "UpdateBasePrices": false,
        "RestaurantGlobs": [
          "*.restaurant.json"
        ]
      },
      "CouponBundle": {
        "ReportOnly": false,
        "OverwriteExisting": false,
        "CouponGlobs": [
          "*.coupon.json"
        ]
      },
      "Order": {
        "OrdersPerRestaurant": 50,
        "StatusDistribution": {
          "Delivered": 70,
          "Cancelled": 20,
          "Rejected": 10
        },
        "OnlinePaymentPercentage": 0,
        "OrderHistoryDays": 90
      },
      "Review": {
        "ReviewCoveragePercentage": 70,
        "RatingDistribution": {
          "5": 40,
          "4": 30,
          "3": 20,
          "2": 7,
          "1": 3
        },
        "CommentPercentage": 80,
        "ReplyPercentage": 90
      }
    }
  },
  "RateLimiting": {
    "OtpRequest": {
      "PerIp": {
        "PerMinute": 10,
        "PerHour": 100
      },
      "PerPhone": {
        "PerMinute": 1,
        "PerHour": 20
      }
    },
    "OtpVerify": {
      "PerIp": {
        "Per5Min": 20
      },
      "PerPhone": {
        "FailedAttemptsWindowMinutes": 10,
        "LockoutMinutes": 2,
        "MaxFailedAttempts": 10
      }
    }
  },
  "ImageProxy": {
    "AllowedHosts": [
      ".wikimedia.org",
      "truongdaihocvietnam.com",
      "printern.net",
      "hotel84.com",
      "kenh14cdn.com",
      "ftcdn.net",
      "media.mia.vn",
      "img.freepik.com",
      "static.vecteezy.com"
    ],
    "RequireSignatureForNonAllowlisted": true,
    "BlockPrivateNetworks": true,
    "AllowHttp": false,
    "MaxBytes": 50485760,
    "TimeoutSeconds": 30,
    "ConnectTimeoutSeconds": 5,
    "CacheSeconds": 86400,
    "MaxRedirects": 3,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/webp",
      "image/gif"
    ],
    "UserAgent": "YummyZoom-ImageProxy/1.0",
    "EnableSignature": false
  }
}